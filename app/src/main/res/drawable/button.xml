<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!-- Disabled state -->
<item android:state_enabled="false">
    <shape android:shape="rectangle">
        <solid android:color="#CCCCCC" /> <!-- Gray color for disabled state -->
        <corners android:radius="5dp" />
    </shape>
</item>

<!-- Enabled state -->
<item android:state_enabled="true">
    <shape android:shape="rectangle">
        <solid android:color="@color/c23_teal" /> <!-- Blue color for enabled state -->
        <corners android:radius="5dp" />
    </shape>
</item>

<!-- Default state (should be the same as enabled) -->
<item>
    <shape android:shape="rectangle">
        <solid android:color="@color/c23_teal" /> <!-- Blue color for default state -->
        <corners android:radius="5dp" />
    </shape>
</item>
</selector>
