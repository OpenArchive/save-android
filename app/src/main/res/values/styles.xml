<resources>

    <!-- themes -->

    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="enterAnim">@anim/slide_in_right</item>
        <item name="exitAnim">@anim/fade_out</item>
        <item name="popEnterAnim">@anim/slide_in_left</item>
        <item name="popExitAnim">@anim/fade_out</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:itemTextAppearance">@style/CustomMenuTextAppearance</item>
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:textViewStyle">@style/OATextViewStyle</item>
        <item name="android:toolbarStyle">@style/OAToolbar</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:divider">@drawable/save_list_item_spacing_small</item>
        <item name="android:listDivider">@drawable/save_list_item_spacing_small</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="actionOverflowMenuStyle">@style/OAOptionsMenu</item>
        <item name="appBarLayoutStyle">@style/AppBarStyle</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetTheme</item>
        <item name="cookieTitleColor">@color/default_title_color</item>
        <item name="cookieMessageColor">@color/default_message_color</item>
        <item name="cookieActionColor">@color/default_action_color</item>
        <item name="cookieBackgroundColor">@color/c23_dark_grey</item>
        <item name="cookiePadding">24dp</item>
        <item name="cookieTitleSize">24sp</item>
        <item name="cookieMessageSize">16sp</item>
        <item name="cookieActionSize">18sp</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/c23_teal</item>
        <item name="android:textSelectHandle">@color/red</item>
        <item name="android:textSelectHandleLeft">@color/red</item>
        <item name="android:textSelectHandleRight">@color/red</item>
        <item name="dialogTheme">@style/AppDialogTheme</item>
        <item name="materialAlertDialogTheme">@style/MaterialAlertDialogTheme</item>
        <item name="materialButtonStyle">@style/OAMaterialButtonStyle</item>
        <item name="preferenceTheme">@style/OAPreferenceStyle</item>
        <item name="switchPreferenceCompatStyle">@style/OASwitchPreferenceStyle</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@drawable/ic_launcher_background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="postSplashScreenTheme">@style/AppTheme.NoActionBar</item>
    </style>

    <style name="AppTheme.Onboarding" parent="AppTheme.NoActionBar">
    </style>

    <style name="CustomMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="WindowAnimationStyle">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="OAPreferenceStyle" parent="PreferenceThemeOverlay">
        <item name="android:listDivider">@drawable/save_list_item_spacing_small</item>
        <item name="android:divider">@drawable/save_list_item_spacing_small</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="AppBottomSheetTheme" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="buttonStyle">@style/OAMaterialButtonStyle</item>
        <item name="materialButtonStyle">@style/OAMaterialButtonStyle</item>
        <item name="backgroundColor">@color/red</item>
    </style>

    <style name="OAOptionsMenu" parent="Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/blue</item>
    </style>

    <style name="OAToolbar" parent="ThemeOverlay.MaterialComponents.ActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="titleCentered">true</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="materialButtonStyle">@style/OAMaterialButtonStyle</item>
    </style>

    <!-- widgets / dialogs / alerts -->

    <style name="AppBarStyle" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="NavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/transparent</item>
    </style>

<!--    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">-->
<!--        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>-->
<!--        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>-->
<!--        <item name="android:textColor">@color/colorPrimary</item>-->
<!--        <item name="android:textSize">14sp</item>-->
<!--    </style>-->

    <style name="MaterialAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="materialAlertDialogTitleTextStyle">@style/CustomMaterialAlertDialog.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/CustomMaterialAlertDialog.Body.Text</item>
        <item name="android:backgroundDimAmount">0.75</item>
    </style>

    <style name="CustomMaterialAlertDialog.Body.Text" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginVertical">10dp</item>
    </style>

    <style name="CustomMaterialAlertDialog.Title.Text" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textSize">20sp</item>
        <!-- <item name="android:textColor">@color/your_color</item> -->
        <!-- <item name="android:textStyle">bold</item> -->
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/c23_grey</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/c23_teal</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="OATextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="OATextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/c23_teal</item>
        <item name="boxBackgroundColor">@color/colorButtonOnBackground</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/cornerRadius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/cornerRadius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/cornerRadius</item>
        <item name="boxCornerRadiusTopStart">@dimen/cornerRadius</item>
        <item name="hintTextColor">@color/c23_teal</item>
        <item name="cursorColor">@color/c23_teal</item>
    </style>

    <style name="OAFloatingLabelStyle">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="OAMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="backgroundTint">@null</item>
        <item name="cornerRadius">@dimen/cornerRadius</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">40dp</item>
        <item name="iconTint">@color/colorPrimary</item>
    </style>

    <style name="OAMaterialSignInButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minWidth">24dp</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="OAPrimaryButtonStyle" parent="OAMaterialButtonStyle">
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="OAMediaButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_pill</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="backgroundTint">@color/c24_cream_95</item>
        <item name="iconSize">38dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="iconTint">#000000</item>
    </style>

    <style name="OAButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="OAMediaSelectionButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:background">@drawable/button</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="OACurrentFolderButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:inset">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:text">@string/action_settings</item>
        <item name="android:textColor">@color/colorOnBackgroundTonedDown</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/ripple_background</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="icon">@drawable/ic_settings</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">10dp</item>
        <item name="iconSize">32dp</item>
        <item name="iconTint">@null</item>
    </style>

    <style name="OABottomBarButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:inset">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:text">@string/action_settings</item>
        <item name="android:textColor">@color/tabBarMenuButton</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="icon">@drawable/ic_settings</item>
        <item name="iconGravity">top</item>
        <item name="iconPadding">5dp</item>
        <item name="iconSize">32dp</item>
        <item name="iconTint">@color/tabBarMenuButton</item>
    </style>

    <style name="OAOutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorOnBackgroundTonedDown</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:backgroundTint">@color/colorButtonOnBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">18sp</item>
        <item name="rippleColor">@color/c23_teal</item>
    </style>

    <style name="OASwitchPreferenceStyle" parent="@style/Preference.SwitchPreferenceCompat.Material">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.App.ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/GreenButtonThemeOverlay</item>
    </style>

    <style name="GreenButtonThemeOverlay">
        <item name="colorPrimary">@color/green</item>
    </style>

    <style name="ImagePickerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>
</resources>
