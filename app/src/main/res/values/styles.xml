<!--        <item name="android:textSize">14sp</item>-->
<!--    </style>-->

    <style name="MaterialAlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="OATextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="OATextFieldStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="OAMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:minWidth">24dp</item>
    </style>

    <style name="OAMaterialActionButtonStyle" parent="OAMaterialButtonStyle">
        <item name="android:background">@drawable/button</item>
    </style>

    <style name="OAPillButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/button_pill</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="OAButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="OABottomBarButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:inset">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:text">@string/action_settings</item>
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="android:textSize">14sp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="icon">@drawable/ic_settings</item>
        <item name="iconGravity">top</item>
        <item name="iconPadding">5dp</item>
        <item name="iconSize">32dp</item>
        <item name="iconTint">@color/colorOnBottomNavbar</item>
    </style>

    <style name="OAOutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="cornerRadius">@dimen/activity_horizontal_margin</item>
        <item name="strokeColor">@color/colorOnBackgroundTonedDown</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:backgroundTint">@color/colorButtonOnBackground</item>
    </style>

    <style name="OASwitchPreferenceStyle" parent="@style/Preference.SwitchPreferenceCompat.Material">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Widget.App.ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/GreenButtonThemeOverlay</item>
    </style>

    <style name="GreenButtonThemeOverlay">
        <item name="colorPrimary">@color/green</item>
    </style>
</resources>
