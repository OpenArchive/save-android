    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/colorOnBackground</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:textViewStyle">@style/OATextViewStyle</item>
        <item name="android:toolbarStyle">@style/OAToolbar</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:divider">@drawable/oa_divider</item>
        <item name="android:listDivider">@drawable/oa_divider</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="actionOverflowMenuStyle">@style/OAOptionsMenu</item>
        <item name="appBarLayoutStyle">@style/AppBarStyle</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetTheme</item>
        <item name="dialogTheme">@style/AppDialogTheme</item>
        <item name="materialAlertDialogTheme">@style/MaterialAlertDialogTheme</item>
        <item name="materialButtonStyle">@style/OAMaterialButtonStyle</item>
        <item name="navigationViewStyle">@style/NavigationViewStyle</item>
        <item name="switchPreferenceCompatStyle">@style/OASwitchPreferenceStyle</item>
        <item name="preferenceTheme">@style/OAPreferenceStyle</item>

        <item name="cookieTitleColor">@color/default_title_color</item>
        <item name="cookieMessageColor">@color/default_message_color</item>
        <item name="cookieActionColor">@color/default_action_color</item>
        <item name="cookieBackgroundColor">@color/c23_dark_grey</item>
        <item name="cookiePadding">24dp</item>
        <item name="cookieTitleSize">24sp</item>
        <item name="cookieMessageSize">16sp</item>
        <item name="cookieActionSize">18sp</item>
    </style>

    <style name="OAPreferenceStyle" parent="PreferenceThemeOverlay">
        <item name="android:listDivider">@drawable/oa_divider</item>
        <item name="android:divider">@drawable/oa_divider</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="AppBottomSheetTheme" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="buttonStyle">@style/OAMaterialButtonStyle</item>
        <item name="materialButtonStyle">@style/OAMaterialButtonStyle</item>
    </style>

    <style name="OAOptionsMenu" parent="Widget.MaterialComponents.PopupMenu.Overflow">
        <item name="android:popupBackground">@color/blue</item>
    </style>

    <style name="OAToolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="AppDialogTheme" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="materialButtonStyle">@style/OAMaterialButtonStyle</item>
    </style>

    <!-- widgets / dialogs / alerts -->

    <style name="AppBarStyle" parent="Widget.MaterialComponents.AppBarLayout.Primary">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="NavigationViewStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@color/colorNavigationDrawerBackground</item>
    </style>

<!--    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">-->
<!--        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>-->
<!--        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>-->
