<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/space_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:importantForAccessibility="no"
        android:padding="2dp"
        android:src="@drawable/logo_drive_2020q4_color_2x_web_64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/space_label"
        android:gravity="start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/gdrive_tm"
        android:textSize="22sp"
        android:maxLines="1"
        android:textStyle="bold"
        android:paddingStart="12dp"
        android:paddingEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/space_toggle_icon"
        app:layout_constraintStart_toEndOf="@id/space_icon"
        app:layout_constraintTop_toTopOf="@id/space_icon"  />

    <TextView
        android:id="@+id/space_sublabel"
        android:gravity="start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Connected"
        android:textSize="16sp"
        android:maxLines="1"
        android:paddingStart="12dp"
        android:paddingEnd="8dp"
        app:layout_constraintEnd_toStartOf="@id/space_toggle_icon"
        app:layout_constraintStart_toEndOf="@id/space_icon"
        app:layout_constraintBottom_toBottomOf="@id/space_icon" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/space_toggle_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:minWidth="0dp"
        android:minHeight="0dp"
        android:padding="0dp"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp"
        app:elevation="0dp"
        app:icon="@drawable/outline_link_off_24"
        app:iconPadding="0dp"
        app:iconSize="40dp"
        app:iconTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@id/space_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/space_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>