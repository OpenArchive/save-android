<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp"
    android:paddingVertical="15dp"
    android:background="@drawable/ripple_background">

    <ImageView
        android:id="@+id/space_icon"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:importantForAccessibility="no"
        android:src="@drawable/circular_icon"
        app:tint="@color/colorOnBackgroundTonedDown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/space_label"
        app:layout_constraintBottom_toBottomOf="@id/space_label"/>

    <TextView
        android:id="@+id/space_label"
        android:gravity="start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/gdrive_tm"
        android:textColor="@color/colorOnBackgroundTonedDown"
        android:textSize="20sp"
        android:maxLines="1"
        android:textStyle="bold"
        android:paddingStart="12dp"
        app:layout_constraintStart_toEndOf="@id/space_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/space_sublabel"
        android:gravity="start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Connected"
        android:textSize="14sp"
        android:paddingStart="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/space_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/space_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>